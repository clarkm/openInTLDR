{
  "manifest_version": 3,
  "name": "My Extension",
  "version": "1.0.0",
  "description": "My first Chrome extension",
  "permissions": [
    "contextMenus",
    "tabs",
    "clipboardWrite",
    "clipboardRead",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content_script.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
